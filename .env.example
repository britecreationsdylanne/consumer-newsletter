# BriteCo Consumer Newsletter - Environment Variables
# Copy this file to .env and fill in your values

# OpenAI API Key (for GPT and web search)
OPENAI_API_KEY=sk-...

# Anthropic API Key (for Claude content generation)
ANTHROPIC_API_KEY=sk-ant-...

# Google AI API Key (for Gemini image generation)
GOOGLE_AI_API_KEY=...

# Perplexity API Key (for web research / Guess the Price)
PERPLEXITY_API_KEY=pplx-...

# YouTube Data API v3 Key (for BriteCo channel videos)
YOUTUBE_API_KEY=...

# Ontraport API Credentials
ONTRAPORT_APP_ID=...
ONTRAPORT_API_KEY=...

# SendGrid API Key (for copy review emails)
SENDGRID_API_KEY=SG....
SENDGRID_FROM_EMAIL=insurance@brite.co
SENDGRID_FROM_NAME=BriteCo Insurance

# Google Docs Credentials (JSON string from service account)
# This is the full JSON content of your service account key file
GOOGLE_DOCS_CREDENTIALS={"type":"service_account",...}

# Flask Configuration
PORT=5001
FLASK_DEBUG=false
